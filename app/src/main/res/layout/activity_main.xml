<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgUkulele"
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/ukulele"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ukulele" />

    <Button
        android:id="@+id/btnUkulele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:text="@string/btnUkulele"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imgUkulele"
        app:layout_constraintStart_toStartOf="@+id/imgUkulele"
        app:layout_constraintTop_toBottomOf="@+id/imgUkulele"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imdDrums"
        android:layout_width="320"
        android:layout_height="150"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/drums"
        app:layout_constraintEnd_toEndOf="@+id/btnUkulele"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="@+id/btnUkulele"
        app:layout_constraintTop_toBottomOf="@+id/btnUkulele"
        app:srcCompat="@drawable/drums" />

    <Button
        android:id="@+id/btDrums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:text="@string/btnDrums"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/imdDrums"
        app:layout_constraintStart_toStartOf="@+id/imdDrums"
        app:layout_constraintTop_toBottomOf="@+id/imdDrums" />
</android.support.constraint.ConstraintLayout>